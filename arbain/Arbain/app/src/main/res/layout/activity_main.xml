<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.firstapp.arbain.SplashScreen">

    <ImageView
        android:layout_width="480dp"
        android:layout_height="844dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/b1" />

    <ImageView
        android:layout_width="144dp"
        android:layout_height="136dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.247"
        app:srcCompat="@drawable/l1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_medium"
        android:text="Hadits Arba'in 1.0"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.963" />

    <Button
        android:id="@+id/button1"
        android:layout_width="248dp"
        android:layout_height="55dp"
        android:backgroundTint="#DDDDDD"
        android:fontFamily="@font/quicksand_medium"
        android:text="Baca hadits"
        android:textColor="#4F0263"
        android:textSize="15sp"
        app:cornerRadius="@android:dimen/app_icon_size"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484"
        app:strokeColor="#8E24AA"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="248dp"
        android:layout_height="55dp"
        android:backgroundTint="#DDDDDD"
        android:fontFamily="@font/quicksand_medium"
        android:text="Tentang"
        android:textColor="#4F0263"
        android:textSize="15sp"
        app:cornerRadius="@android:dimen/app_icon_size"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.585"
        app:strokeColor="#8E24AA"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="248dp"
        android:layout_height="55dp"
        android:backgroundTint="#DDDDDD"
        android:fontFamily="@font/quicksand_medium"
        android:text="Pengaturan"
        android:textColor="#4F0263"
        android:textSize="15sp"
        app:cornerRadius="@android:dimen/app_icon_size"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69"
        app:strokeColor="#8E24AA"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>